#!/bin/bash -e

eval "$(cli-shezargs $@)"

[[ -z $service ]] && service="$SERVERASSIST_SERVICE"
[[ -z $stack   ]] && stack="$SERVERASSIST_STACK"

if [[ $service == web ]]; then
  (cd ~/dev/server-assist-server/webtier && pm2 start webtier.js -- --vverbose --main)

  if [[ $stack == cluster ]]; then
    (cd ~/dev/server-assist-server/hq && pm2 start hq.js -- --vverbose --main)
  fi
fi


if [[ $service == netapp ]]; then
  (cd ~/dev/attr-man && pm2 start attr-man.js -- --vverbose --main)
fi

